# Dockerfile for openSUSE testing
ARG BASE_IMAGE=opensuse/tumbleweed:latest
FROM ${BASE_IMAGE}

LABEL maintainer="Complete Linux Internet Repair"
LABEL description="Test container for openSUSE family"

# Install required packages
RUN zypper --non-interactive install \
    bash \
    iproute2 \
    iputils \
    bind-utils \
    curl \
    sudo \
    procps \
    net-tools \
    ca-certificates \
    && zypper clean -a

# Create test user
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy project files
COPY . /opt/network-repair
WORKDIR /opt/network-repair

# Make scripts executable
RUN chmod +x network-repair src/main.sh install.sh && \
    find src -name "*.sh" -exec chmod +x {} \; && \
    find tests -name "*.sh" -exec chmod +x {} \;

# Set entrypoint
ENTRYPOINT ["/opt/network-repair/network-repair"]
CMD ["--help"]
