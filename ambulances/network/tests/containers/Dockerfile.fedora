# Dockerfile for Fedora/RHEL-based testing
ARG BASE_IMAGE=fedora:40
FROM ${BASE_IMAGE}

LABEL maintainer="Complete Linux Internet Repair"
LABEL description="Test container for Fedora/RHEL family"

# Install required packages
RUN dnf install -y \
    bash \
    iproute \
    iputils \
    bind-utils \
    curl \
    sudo \
    procps-ng \
    net-tools \
    ca-certificates \
    && dnf clean all

# Create test user
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy project files
COPY . /opt/network-repair
WORKDIR /opt/network-repair

# Make scripts executable
RUN chmod +x network-repair src/main.sh install.sh && \
    find src -name "*.sh" -exec chmod +x {} \; && \
    find tests -name "*.sh" -exec chmod +x {} \;

# Set entrypoint
ENTRYPOINT ["/opt/network-repair/network-repair"]
CMD ["--help"]
