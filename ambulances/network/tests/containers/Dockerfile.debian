# Dockerfile for Debian/Ubuntu-based testing
ARG BASE_IMAGE=ubuntu:22.04
FROM ${BASE_IMAGE}

LABEL maintainer="Complete Linux Internet Repair"
LABEL description="Test container for Debian/Ubuntu family"

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install required packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    bash \
    iproute2 \
    iputils-ping \
    dnsutils \
    curl \
    sudo \
    procps \
    net-tools \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Create test user
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy project files
COPY . /opt/network-repair
WORKDIR /opt/network-repair

# Make scripts executable
RUN chmod +x network-repair src/main.sh install.sh && \
    find src -name "*.sh" -exec chmod +x {} \; && \
    find tests -name "*.sh" -exec chmod +x {} \;

# Set entrypoint
ENTRYPOINT ["/opt/network-repair/network-repair"]
CMD ["--help"]
