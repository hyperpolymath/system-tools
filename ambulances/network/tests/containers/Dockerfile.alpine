# Dockerfile for Alpine Linux testing
ARG BASE_IMAGE=alpine:3.20
FROM ${BASE_IMAGE}

LABEL maintainer="Complete Linux Internet Repair"
LABEL description="Test container for Alpine Linux"

# Install required packages
RUN apk add --no-cache \
    bash \
    iproute2 \
    iputils \
    bind-tools \
    curl \
    sudo \
    procps \
    net-tools \
    ca-certificates \
    coreutils

# Create test user
RUN adduser -D -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy project files
COPY . /opt/network-repair
WORKDIR /opt/network-repair

# Make scripts executable
RUN chmod +x network-repair src/main.sh install.sh && \
    find src -name "*.sh" -exec chmod +x {} \; && \
    find tests -name "*.sh" -exec chmod +x {} \;

# Set entrypoint
ENTRYPOINT ["/opt/network-repair/network-repair"]
CMD ["--help"]
